        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="3dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/imgBgTextRow"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:gravity="center"
                android:maxHeight="300dp"
                android:minHeight="200dp"
                android:text="ddhjk dkhgk jh kfdh gkjdhkgh jdhgj dhghddhjk dkhgk jh kfdh gkjdhkgh jdhgj dhghddhjk dkhgk jh kfdh gkjdhkgh jdhgj dhghddhjk dkhgk jh kfdh gkjdhkgh jdhgj dhghddhjk dkhgk jh kfdh gkjdhkgh jdhgj dhghddhjk dkhgk jh kfdh gkjdhkgh jdhgj dhghddhjk dkhgk jh kfdh gkjdhkgh jdhgj dhghddhjk dkhgk jh kfdh gkjdhkgh jdhgj dhghddhjk dkhgk jh kfdh gkjdhkgh jdhgj dhgh"
                app:layout_constraintBottom_toBottomOf="@+id/imageRow"
                app:layout_constraintEnd_toEndOf="@+id/imageRow"
                app:layout_constraintStart_toStartOf="@+id/imageRow"
                app:layout_constraintTop_toTopOf="@+id/imageRow" />

            <ImageView
                android:id="@+id/imageRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="350dp"
                android:minHeight="200dp"
                android:scaleType="fitCenter"
                android:src="@drawable/download"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="4dp">

        <ImageView
            android:id="@+id/imgShareRow"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/share" />

        <ImageView
            android:id="@+id/dwnImgRow"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/download"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </LinearLayout>

</LinearLayout>